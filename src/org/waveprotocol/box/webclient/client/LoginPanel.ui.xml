<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style type='org.waveprotocol.box.webclient.client.LoginPanel.Style'>
    .nameField, .sendButton {
      float: left;
    }

    .sendButton {
      margin-left: 8px;
    }

    .bad, .good, .neutral {
      float: right;
      padding: 0 4px;
      margin: 2px;
      text-align: center;
      border-radius: 5px;
      \-moz-border-radius: 5px;
      \-webkit-border-radius: 5px;
    }

    .bad {
      background: yellow;
    }

    .good {
      background: #cec;
    }

    .neutral {
      background: inherit;
    }
  </ui:style>

  <g:FlowPanel>
    <g:TextBox visibleLength="20" ui:field="nameField" styleName="{style.nameField}" />
    <g:Button ui:field="sendButton" styleName="{style.sendButton}">Login</g:Button>
    <g:Label ui:field="connectionStatus" styleName="{style.neutral}" />
  </g:FlowPanel>
</ui:UiBinder>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:s='urn:import:org.waveprotocol.wave.examples.webclient.client'>
  <ui:style>
    .alignRight {
      text-align: right;
    }
    
    .insertReply {
      background: #ddd; border: thin solid #ccc; border-bottom: none;
      border-radius: 5px; cursor: pointer; display: inline-block;
      margin-bottom: 2px; padding: 2px;
    }
      
    .blipViewer {
      border-style: solid; border-width: 1px; border-radius: 2px; padding: 2px;
      border-color: #2222ff
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.blipViewer}">
    <s:EditorWidget ui:field="editor"/>
    <g:SimplePanel ui:field="contents" />
    <!-- 
    <g:HTMLPanel styleName="{style.alignRight}">
	  <g:Label ui:field="insertReply" styleName="{style.insertReply}">Reply here</g:Label>
    </g:HTMLPanel>
    -->
  </g:HTMLPanel>
</ui:UiBinder>

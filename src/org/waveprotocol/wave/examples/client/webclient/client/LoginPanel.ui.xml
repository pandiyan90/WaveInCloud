<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style
    type='org.waveprotocol.wave.examples.client.webclient.client.LoginPanel.Style'>
      .bad {
        background: yellow;
      }
      
      .good {
        background: #cec;
      }
      
      .nameField {
        
      }
      
      .neutral {
        background: inherit;
      }
      
      .bad,.good,.neutral {
        margin: 2px; border-radius: 5px; text-align: center;
      }
    </ui:style>

  <g:DockLayoutPanel unit="PCT">
    <g:west size="20">
      <g:TextBox ui:field="nameField" stylePrimaryName="{style.nameField}">FedOne
        User Name</g:TextBox>
    </g:west>
    <g:west size="10">
      <g:Button ui:field="sendButton">Login</g:Button>
    </g:west>
    <g:east size="30">
      <g:Label ui:field="connectionStatus" styleName="{style.neutral}">Connection status</g:Label>
    </g:east>
  </g:DockLayoutPanel>
</ui:UiBinder>